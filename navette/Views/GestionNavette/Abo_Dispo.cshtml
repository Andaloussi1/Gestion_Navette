
@{
    ViewBag.Title = "Abo_Dispo";
}


<br />
<br />

<h2>Abonnements Disponibles :  </h2>
<br />
<br />
<table class="table">
    <tr>

        <th>Abonnement!!</th>
        <th>Ville de départ!!</th>
        <th>Ville d'arrivée!!</th>
        <th>Date Debut</th>
        <th>Date Fin </th>
        <th>Socièté transport</th>
        <th></th>
    </tr>
    @foreach (var abo in ViewBag.Abonnement)
    {

        <tr>

            <td>@abo.ID_Abonnement</td>

            @foreach (var V in ViewBag.toutes_villes)
            {
                if (abo.Ville_Depart == V.ID_Ville)
                {
                    <td>@(V.Nom_Ville.ToUpper())</td>
                }

            }


            @foreach (var V in ViewBag.toutes_villes)
            {
                if (abo.Ville_Arrive == V.ID_Ville)
                {
                    <td>@(V.Nom_Ville.ToUpper())</td>
                }



            }

            <td>@abo.Date_Debut.ToString("dd-M-yyyy")</td>


            <td>@(abo.Date_Fin.ToString("dd-M-yyyy"))</td>
           @foreach(var S in ViewBag.toutes_societes)
                {
                    if(abo.ID_Abo_Societe == S.ID_Societe)
                    {
                        <td>@S.Nom</td>
                    }

                }


            <td>
                <a href="detail/@abo.ID_Abonnement" class="btn btn-primary"> Details</a>
            </td>

        </tr>
    }

</table>
