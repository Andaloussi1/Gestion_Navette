@using (Html.BeginForm("AjouterAutocar", "GestionNavette", FormMethod.Post, new { @class = "row g-4 mt-5" }))
{

    <!-- Modal -->
   
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Addition of a new Bus !</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="col-sm-6 col-md-9 col-xl-7">
                        <div class="input-group-icon">
                            <label class="form-label visually-hidden" for="inputPersonOne">Person</label>

                            @Html.TextBoxFor(A => A.Autocar.Matricule, new { placeholder = "Registration number", @class = "form-control input-box form-voyage-control" })

                            <span class="nav-link-icon text-800 fs--1 input-box-icon"><i class="fas fa-address-card"> </i></span>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-9 col-xl-7">
                        <div class="input-group-icon">
                            <label class="form-label visually-hidden" for="inputPersonOne">Person</label>

                            @Html.TextBoxFor(A => A.Autocar.Capacity, new { placeholder = "Capacity", @class = "form-control input-box form-voyage-control" })

                            <span class="nav-link-icon text-800 fs--1 input-box-icon"><i class="fas fa-users"> </i></span>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-9 col-xl-7">
                        <div class="input-group-icon">
                            <label class="form-label visually-hidden" for="inputPersonOne">Person</label>

                            @Html.TextBoxFor(A => A.Autocar.Descritpion_Autocar, new { placeholder = "Description", @class = "form-control input-box form-voyage-control" })

                            <span class="nav-link-icon text-800 fs--1 input-box-icon"><i class="fas fa-clipboard-list"> </i></span>
                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>

                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </div>
        </div>
    </div>

}