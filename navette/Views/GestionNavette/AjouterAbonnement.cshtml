@model navette.Models.AboBus
@{
    ViewBag.Title = "AjouterAbonnement";
    Layout = "~/Views/Shared/LayoutSociete.cshtml";
}


@if (TempData["AutocarSuccess"] != null)
{
    <div class="container">

        <div class="alert alert-success alert-dismissible" id="myAlert">
            <a href="#" class="close">&times;</a>
            <strong>Success!</strong> @TempData["AutocarSuccess"]

        </div>
    </div>

    <script>
        $(document).ready(function () {
            $(".close").click(function () {
                $("#myAlert").alert("close");
            });
        });
    </script>
}

@if (TempData["AutocarError"] != null)
{
    <div class="container">

        <div class="alert alert-danger alert-dismissible" id="myAlert">
            <a href="#" class="close">&times;</a>
            <strong>Success!</strong> @TempData["AutocarError"]

        </div>
    </div>

    <script>
        $(document).ready(function () {
            $(".close").click(function () {
                $("#myAlert").alert("close");
            });
        });
    </script>
}





