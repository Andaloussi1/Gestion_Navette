@model navette.Models.Abonnement
@{
    ViewBag.Title = "Detail";
}




@{
    ViewBag.Title = "ListAbonnement";
    Layout = "~/Views/Shared/LayoutForm.cshtml";
}


<section class="mt-2 py-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 py-7 py-xl-7 py-xxl-9">
                <br /><br /><br /><br /><br />
                <h1 class="display-3 text-primary fw-bold">Details of the selected subscription</h1>
                <br />
                <br />
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">
                                        Departure
                                    </th>

                                    <th scope="col">
                                        Arrivale
                                    </th>

                                    <th scope="col">
                                        Starts On
                                    </th>

                                    <th scope="col">
                                       Ends On
                                    </th>

                                    <th scope="col">
                                        Company
                                    </th>
                                    <th scope="col">
                                        Description
                                    </th>
                                    <th scope="col">
                                        Price
                                    </th>


                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @(ViewBag.abonnement.Ville.Nom_Ville.ToUpper())
                                    </td>

                                    <td>
                                        @(ViewBag.abonnement.Ville1.Nom_Ville.ToUpper())
                                    </td>

                                    <td>
                                        @ViewBag.abonnement.Date_Debut.ToString("dd-M-yyyy")
                                    </td>

                                    <td>
                                        @ViewBag.abonnement.Date_Fin.ToString("dd-M-yyyy")
                                    </td>
                                    <td>
                                        @ViewBag.abonnement.Societe.Nom_Societe
                                    </td>
                                    <td>
                                        @(ViewBag.abonnement.Autocar.Descritpion_Autocar.ToUpper())
                                    </td>

                                    <td>
                                        @(ViewBag.abonnement.Prix)
                                    </td>

                                    <td>
                                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">Subscribe</button>    
                                    </td>
                                </tr>


                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
                                        @using (Html.BeginForm("Confirmation", "GestionNavette", FormMethod.Post, new { @class = "row g-4 mt-5" }))
                                        {

                                            <!-- Modal -->
                                            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLongTitle">Confirmation !</h5>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Are you sure of the choice you made ?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                            
                                                            <button type="submit" class="btn btn-primary">Confirm</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        }