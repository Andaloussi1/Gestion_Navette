
@{
    ViewBag.Title = "ListAbonnement";
    Layout = "~/Views/Shared/LayoutForm.cshtml";
}


<section class="mt-2 py-0">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 py-7 py-xl-7 py-xxl-9">
                <br /><br /><br /><br /><br />
                <h1 class="display-3 text-primary fw-bold">List of available subscriptions</h1>
                <br />
                <br />
                <div class="tab-content" id="nav-tabContent">
                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                        <h3 class="display-5 text-secondary fw-bold">FROM  : @ViewBag.ville_Depart </h3>
                        <h3 class="display-5 text-secondary fw-bold">TO : @ViewBag.ville_Arrive </h3>
                        
                        <table class="table">

                            <tr>

                                <th>Departure hour</th>
                                <th>Arrival Hour</th>
                                <th>Start</th>
                                <th>End</th>
                                <th>Details</th>

                            </tr>

                            @foreach (var abo in ViewBag.abonnement)
                            {
                                <tr>
                                    <td>@(abo.Heure_Depart)</td>
                                    <td>@(abo.Heure_Arrive)</td>


                                    @if (abo.Date_Debut < ViewBag.date_choisi)
                                    {
                                        <td>@(ViewBag.date_choisi.ToString("dd-MM-yyyy"))</td>

                                    }
                                    @if (abo.Date_Debut > ViewBag.date_choisi)
                                    {
                                        <td>@(abo.Date_Debut.ToString("dd-M-yyyy"))</td>

                                    }
                                    <td>@(abo.Date_Fin.ToString("dd-M-yyyy"))</td>
                                    <td><a href="detail/@abo.ID_Abonnement" class="btn btn-primary"> Details</a></td>
                                </tr>
                            }
                        </table>
                        <a href="Suggest" class="btn btn-primary"> Suggest</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>